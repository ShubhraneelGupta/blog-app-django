<div class="flex justify-center items-center space-x-4 mt-6">
    {% if page.has_previous %}
    <a href="?page={{ page.previous_page_number }}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">
        ← Previous
    </a>
    {% endif %}

    <span class="text-gray-700">
        Page <strong>{{ page.number }}</strong> of <strong>{{ page.paginator.num_pages }}</strong>
    </span>

    {% if page.has_next %}
    <a href="?page={{ page.next_page_number }}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">
        Next →
    </a>
    {% endif %}
</div>