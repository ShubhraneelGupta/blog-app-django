{% load static %}
<!DOCTYPE html>

<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}NEELs BLOG{% endblock %}</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 text-gray-900">
  <!-- Navbar -->
  <header class="w-full bg-stone-600 text-white py-4 px-6 shadow-md">
    <div class="w-1/2 mx-auto flex justify-between items-center">
      <div class="flex">
        <img src="https://upload.wikimedia.org/wikipedia/commons/7/7e/Abraxas_gem_scan.svg" width="25px" height="25px"
          class="mr-2">
        <h1 class="text-3xl font-bold">
          <a href="{% url 'blog:post_list' %}" class="hover:text-gray-400 transition">Neel's Blog</a>
        </h1>
      </div>
      <div class="flex">
        <a href="{%url 'blog:post_search'%}" class="px-3">
          <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="25" height="25" viewBox="0 0 50 50">
            <path
              d="M 21 3 C 11.621094 3 4 10.621094 4 20 C 4 29.378906 11.621094 37 21 37 C 24.710938 37 28.140625 35.804688 30.9375 33.78125 L 44.09375 46.90625 L 46.90625 44.09375 L 33.90625 31.0625 C 36.460938 28.085938 38 24.222656 38 20 C 38 10.621094 30.378906 3 21 3 Z M 21 5 C 29.296875 5 36 11.703125 36 20 C 36 28.296875 29.296875 35 21 35 C 12.703125 35 6 28.296875 6 20 C 6 11.703125 12.703125 5 21 5 Z">
            </path>
          </svg>
        </a>
      </div>
    </div>

  </header>

  <!-- Page Content -->
  <main class="max-w-4xl mx-auto mt-6 p-6 bg-white shadow-md rounded-lg">
    {% block content %} {% endblock %}
  </main>

  <!-- Footer -->
  <footer class="text-center py-4 text-sm text-gray-600 mt-6">
    &copy; 2025 No Eels Blog. All rights reserved.
  </footer>
</body>

</html>